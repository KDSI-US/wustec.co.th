{{ header }}{{ git_hidden_tag }}
<div id="information-contact" class="dreamit-contact-area container">

	<div class="row">{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-sm-6' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-sm-9' %}
		{% else %}
			{% set class = 'col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
			<h1 class="page-title">{{ heading_title }}</h1>

			{% if locations %}
				<h3>{{ text_store }}</h3>
				<div class="panel-group" id="accordion">
					{% for location in locations %}
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
									<a href="#collapse-location{{ location.location_id }}" class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">{{ location.name }}
										<i class="fa fa-caret-down"></i>
									</a>
								</h4>
							</div>
							<div class="panel-collapse collapse" id="collapse-location{{ location.location_id }}">
								<div class="panel-body">
									<div class="row">
										{% if location.image %}
											<div class="col-sm-3"><img src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail"/></div>
										{% endif %}
										<div class="col-sm-3">
											<strong>{{ location.name }}</strong><br/>
											<address>
												<a href="http://maps.google.com/?q={{ location.address }}">{{ location.address }}</a>
											</address>
											{% if location.geocode %}
												<a href="https://maps.google.com/?q={{ location.address }}" target="_blank" class="btn btn-info">
													<i class="fa fa-map-marker"></i>
													{{ button_map }}</a>
											{% endif %}
										</div>
										<div class="col-sm-3">
											<strong>{{ text_telephone }}</strong><br>
											<a href="tel:+1{{ location.telephone|replace({'-':''}) }}">{{ location.telephone }}</a><br/>
											<br/>
											{% if location.fax %}
												<strong>{{ text_fax }}</strong><br>
												{{ location.fax }}
											{% endif %}
										</div>
										<div class="col-sm-3">
											{% if location.open %}
												<strong>{{ text_open }}</strong><br/>
												{{ location.open }}<br/>
												<br/>
											{% endif %}
											{% if location.comment %}
												<strong>{{ text_comment }}</strong><br/>
												{{ location.comment }}
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}
			{{ content_bottom }}</div>
		{{ column_right }}</div>

	<div class="row">
		<div class="col-lg-4 col-md-12">
			<div class="row">
				<div class="col-lg-12 col-md-4">
					<div class="dreamit-contact-content d-flex">
						<div class="contact-icon">
							<i class="flaticon-time"></i>
						</div>
						<div class="contact-title">
							<h2>{{ text_address }}</h2>
							<span>{{ address }}</span>
						</div>
					</div>
				</div>
				<div class="col-lg-12 col-md-4">
					<div class="dreamit-contact-content d-flex">
						<div class="contact-icon">
							<i class="flaticon-call"></i>
						</div>
						<div class="contact-title">
							<h2>{{ text_telephone }}</h2>
							<span>{{ telephone }}</span>
						</div>
					</div>
				</div>
				<div class="col-lg-12 col-md-4">
					<div class="dreamit-contact-content d-flex">
						<div class="contact-icon">
							<i class="flaticon-report"></i>
						</div>
						<div class="contact-title">
							<h2>{{ text_email }}</h2>
							<span>{{ office_email }}</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-8 col-md-12 pl-50">
			<div class="dreamit-section-title pb-30">
				<div class="dreamit-section-sub-title">
					<h5>// {{ text_contact }}</h5>
				</div>
				<div class="dreamit-section-main-title">
					<h2>{{ text_touch }}
					</h2>
				</div>
				<div class="dreamit-section-content-text">
					<p>
						Morem ipsum dolor sit amet, consectetur are adipiscing elit. Aliquam at rhoncus lorem all. Etiam in nibh ut est laoreet mattis joremn as. Maecenas ac tempor mauris.</p>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<div class="contact-form contact_from style-two">
							<form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
								<div class="row">
									<div class="col-lg-6">
										<div class="form_box mb-3 required">
											<input class="form-control" type="text" name="name" id="input-name" placeholder="{{ entry_name }}">
											{% if error_name %}
												<div class="text-danger">{{ error_name }}</div>
											{% endif %}
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box mb-3 required">
											<input class="form-control" type="text" name="email" id="input-email" placeholder="{{ entry_email }}">
											{% if error_email %}
												<div class="text-danger">{{ error_email }}</div>
											{% endif %}
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box mb-3">
											<input class="form-control" type="text" name="phone" placeholder="{{ text_telephone }}">
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box">
											<input class="form-control" type="text" name="web" placeholder="{{ text_website }}">
										</div>
									</div>
									<div class="col-lg-12">
										<div class="form_box mb-1 required">
											<textarea class="form-control" id="input-enquiry" name="enquiry" cols="30" rows="5" placeholder="{{ entry_enquiry }}"></textarea>
											{% if error_enquiry %}
												<div class="text-danger">{{ error_enquiry }}</div>
											{% endif %}
										</div>
										{{ captcha }}
										<div class="wow fadeInUp" data-wow-delay="1.5s" data-wow-duration="1s">
											<div class="quote_btn text_center pt-3">
												<input class="btn btn-primary captcha-btn" type="submit" value="{{ button_submit }}"/>
											</div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<br/>

	{% if geocode %}
		<div class="row">
			<div class="content col-12">
				<p class="pt-20">
					<span style="font-weight: bold;font-size:18px;color:#434343;">{{ owner }}</span><br>
					<span style="font-weight: bold;">
						<a href="https://maps.google.com/?q={{ address }}" target="_blank">{{ address }}</a>
					</span><br>
					<span style="font-weight: bold;">
						{% if telephone %}TEL:
							<a href="tel:+1{{ telephone|replace({'-':''}) }}">{{ telephone }}</a>&nbsp;
						{% endif %}
						{% if fax %}FAX:
							{{ fax }}&nbsp;
						{% endif %}
						{% if office_email %}EMAIL:
							<a href="mailto:{{ office_email }}">{{ office_email }}</a>
						{% endif %}
					</span>
				</p>
				<div class="video-responsive">
					{{ googlemap_embed_html }}
				</div>
			</div>
		</div>
	{% endif %}
</div></div>{{ footer }}
