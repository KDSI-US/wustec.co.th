{{ header }}{{ git_hidden_tag }}
<div id="information-contact" class="container">

  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
    <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
    </ul>
      <h1 class="page-title">{{ heading_title }}</h1>
      {# <h3>{{ text_location }}</h3> #}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row contact-info">
      <div class="right">
        <div class="map">
            {# 
            $geo=explode(',',$geocode);
            print_r($geo);
            echo count($geo);
            if(count($geo)==2){
                echo "yes";
            }
            else{
                echo "no";
            }
           #}
        </div>
      </div>   
          </div>
        </div>
      </div>
      {% if contact_details %}
      <div class="contact-details">
      {{ contact_details }}
      </div>
      {% endif %}

      {% if locations %}
      <h3>{{ text_store }}</h3>
      <div class="panel-group" id="accordion">
        {% for location in locations %}
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title"><a href="#collapse-location{{ location.location_id }}" class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">{{ location.name }} <i class="fa fa-caret-down"></i></a></h4>
          </div>
          <div class="panel-collapse collapse" id="collapse-location{{ location.location_id }}">
            <div class="panel-body">
              <div class="row">
                {% if location.image %}
                <div class="col-sm-3"><img src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail" /></div>
                {% endif %}
                <div class="col-sm-3"><strong>{{ location.name }}</strong><br />
                  <address>
                    <a href="http://maps.google.com/?q={{ location.address }}">{{ location.address }}</a>
                  </address>
                  {% if location.geocode %}
                  <a href="https://maps.google.com/?q={{ location.address }}" target="_blank" class="btn btn-info"><i class="fa fa-map-marker"></i> {{ button_map }}</a>
                  {% endif %}
                </div> 
                <div class="col-sm-3"> <strong>{{ text_telephone }}</strong><br>
                  <a href="tel:+1{{ location.telephone|replace({'-':''}) }}">{{ location.telephone }}</a><br />
                  <br />
                  {% if location.fax %}
                  <strong>{{ text_fax }}</strong><br>
                  {{ location.fax }}
                  {% endif %}
                </div>
                <div class="col-sm-3">
                  {% if location.open %}
                  <strong>{{ text_open }}</strong><br />
                  {{ location.open }}<br />
                  <br />
                  {% endif %}
                  {% if location.comment %}
                  <strong>{{ text_comment }}</strong><br />
                  {{ location.comment }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% endif %}
      <div class="contact-form-design">
          <div class="left">
            {% if image %} 
            <div class="address-detail">
              <img src="{{ image }}" alt="{{ store }}" title="{{ store }}" class="img-thumbnail" />
            </div>
            {% endif %} 
            <div class="address-detail1">
              <div class="image"></div>
              <span style="font-weight: bold;font-size:20px;color:#434343;">
                <strong>{{ owner }}</strong>
              </span>
              <br />
              {% if geocode %}
              <address>
                <a href="https://maps.google.com/?q={{ address }}" target="_blank">{{ address }}</a>
              </address>
              <a href="https://maps.google.com/?q={{ address }}"" target="_blank" class="btn btn-info"><i class="fa fa-map-marker"></i> {{ button_map }}</a>
              {% endif %}
            </div>
            <div class="telephone">
               <div class="image"></div>
               <strong>{{ text_telephone }}</strong>
               <address><a href="tel:+1{{ telephone|replace({'-':''}) }}">{{ telephone }}</a></address>
            </div>
            <div class="email">
               <div class="image"></div>
               <strong>{{ text_email }}</strong>
               <address><a href="mailto:{{ office_email }}">{{ office_email }}</a></address>
            </div>
            <div class="fax">
              <div class="image"></div>
              {% if fax %} 
              <strong>{{ text_fax }}</strong>
              <address>{{ fax }}</address>
              {% endif %}
            </div>
            <div class="time">
              <div class="image"></div>
              {% if open %}
              <strong>{{ text_open }}</strong>
              <address>{{ open }}</address>
              {% endif %}
            </div>
            <div class="comment">
              <div class="image"></div>
              {% if comment %}
              <strong>{{ text_comment }}</strong>
              <address>{{ comment }}</address>
              {% endif %}
            </div>
        </div>
        <div class="contact-form">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
          <legend>{{ text_contact }}</legend>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
            <div class="col-sm-10">
              <input type="text" name="email" id="input-email" class="form-control" />
              {% if error_email %}
              <div class="text-danger">{{ error_email }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-enquiry">{{ entry_enquiry }}</label>
            <div class="col-sm-10">
              <textarea name="enquiry" rows="10" id="input-enquiry" class="form-control">{{ enquiry }}</textarea>
              {% if error_enquiry %}
              <div class="text-danger">{{ error_enquiry }}</div>
              {% endif %}
            </div>
          </div>
          {{ captcha }}
        </fieldset>
        <div class="buttons">
          <div class="pull-right">
            <input class="btn btn-primary captcha-btn" type="submit" value="{{ button_submit }}" />
          </div>
        </div>
      </form>
    </div>
    </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>

  <br />
  <br />

  {% if geocode %}
  <p>
    <span style="font-weight: bold;font-size:18px;color:#434343;">{{ owner }}</span><br>
    <span style="font-weight: bold;"><a href="https://maps.google.com/?q={{ address }}" target="_blank">{{ address }}</a></span><br>
    <span style="font-weight: bold;">
      {% if telephone %}TEL: <a href="tel:+1{{ telephone|replace({'-':''}) }}">{{ telephone }}</a>&nbsp; {% endif %}
      {% if fax %}FAX: {{ fax }}&nbsp; {% endif %}
      {% if office_email %}EMAIL: <a href="mailto:{{ office_email }}">{{ office_email }}</a>{% endif %}
    </span>
  </p>
  <div class="video-responsive">
    {{ googlemap_embed_html }}
  </div>
  {% endif %}

</div>

  <br />
  <br />
  <br />
  <br />

{{ footer }}
