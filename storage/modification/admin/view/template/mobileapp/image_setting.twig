                <div class="row">
                  <div class="col-sm-6">
                    <input type="text" name="restapi_default_image_category_width_mobile" value="{{ restapi_default_image_category_width_mobile }}" placeholder="{{ entry_width }}" id="input-image-category-width-mobile" class="form-control" />
                  </div>
                  <div class="col-sm-6">
                    <input type="text" name="restapi_default_image_category_height_mobile" value="{{ restapi_default_image_category_height_mobile }}" placeholder="{{ entry_height }}" class="form-control" />
                  </div>
                </div>
                {% if error_image_category %}
                <div class="text-danger">{{ error_image_category }}</div>
                {% endif %}
              </div>
            </div>
