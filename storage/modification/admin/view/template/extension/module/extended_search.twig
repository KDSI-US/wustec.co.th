                    {% endif %}
			        <label class="toggle" for="input-model"><span class="toggle_handler"></span></label>
			      </div>
			    </div>
		      </div>
			
		      <div class="form-group addpad">
			  
                <div class="col-sm-6">
		          <div class="form-group">
                    <label class="col-sm-4 col-xs-4 control-label">{{ entry_sku }}</label>
                    <div class="col-sm-8 col-xs-2">
			          <div class="toggleWrapper">
                        {% if module_extended_search_sku %}
				        <input type="checkbox" id="input-sku" name="module_extended_search_sku" value="1" checked="checked" />
