{{ header }}{{ git_hidden_tag }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      	<div class="pull-right">
        	<button type="submit" form="form-ciaccount-dashboard" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-check"></i> {{ button_save }}</button>
        </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        <div class="pull-right">
          <select name="store_id" onchange="window.location = 'index.php?route=account_dashboard/account_dashboard&user_token={{ user_token }}&store_id='+ this.value;">
            <option value="0">{{ text_default }}</option>
            {% for store in stores %}
            <option value="{{ store.store_id }}" {{ store.store_id == store_id ? 'selected="selected"' : '' }}>{{ store.name }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ciaccount-dashboard" class="form-horizontal">
		<ul class="nav nav-tabs">
			<li class="active"><a href="#tab-general" data-toggle="tab"><i class="fa fa-cogs"></i> {{ tab_general }}</a></li>
			<li><a href="#tab-profile" data-toggle="tab"><i class="fa fa-image"></i> {{ tab_profile }}</a></li>
			<li><a href="#tab-template" data-toggle="tab"><i class="fa fa-desktop"></i> {{ tab_template }}</a></li>
			<li><a href="#tab-account_dashboard-links" data-toggle="tab"><i class="fa fa-columns"></i> {{ tab_customer_link }}</a></li>
			<li><a href="#tab-affiliate-links" data-toggle="tab"><i class="fa fa-columns"></i> {{ tab_affiliate_link }}</a></li>
			<li><a href="#tab-design" data-toggle="tab"><i class="fa fa-eye-slash"></i> {{ tab_design }}</a></li>
			<li><a href="#tab-support" data-toggle="tab"><i class="fa fa-envelope"></i> {{ tab_support }}</a></li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="tab-general">
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
					<div class="col-sm-10">
					  <select name="account_dashboard_status" id="input-status" class="form-control">
						{% if account_dashboard_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					  </select>
					</div>
				</div>
				<fieldset>
					<legend>{{ text_first }}</legend>
					<div class="form-group">
					  <label class="col-sm-2 control-label" for="input-latest-order">{{ entry_latest_order }}</label>
						<div class="col-sm-10">
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_latest_orders" value="1" {{ account_dashboard_latest_orders ? 'checked="checked"' : '' }} />
							{{ text_yes }}                
						  </label>
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_latest_orders" value="0" {{ not account_dashboard_latest_orders ? 'checked="checked"' : '' }} />
							{{ text_no }}
						  </label>
						</div>
					</div>
					<div class="form-group">
					  <label class="col-sm-2 control-label" for="input-orders">{{ entry_total_orders }}</label>
						<div class="col-sm-10">
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_orders" value="1" {{ account_dashboard_total_orders ? 'checked="checked"' : '' }} />
							{{ text_yes }}                
						  </label>
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_orders" value="0" {{ not account_dashboard_total_orders ? 'checked="checked"' : '' }} />
							{{ text_no }}
						  </label>
						</div>
					</div>
					<div class="form-group">
					  <label class="col-sm-2 control-label" for="input-transactions">{{ entry_total_transactions }}</label>
						<div class="col-sm-10">
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_transactions" value="1" {{ account_dashboard_total_transactions ? 'checked="checked"' : '' }} />
							{{ text_yes }}                
						  </label>
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_transactions" value="0" {{ not account_dashboard_total_transactions ? 'checked="checked"' : '' }} />
							{{ text_no }}
						  </label>
						</div>
					</div>						
					<div class="form-group">
					  <label class="col-sm-2 control-label" for="input-wishlists">{{ entry_total_wishlist }}</label>
						<div class="col-sm-10">
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_wishlists" value="1" {{ account_dashboard_total_wishlists ? 'checked="checked"' : '' }} />
							{{ text_yes }}                
						  </label>
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_wishlists" value="0" {{ not account_dashboard_total_wishlists ? 'checked="checked"' : '' }} />
							{{ text_no }}
						  </label>
						</div>
					</div>
					<div class="form-group">
					  <label class="col-sm-2 control-label" for="input-rewardpoints">{{ entry_reward_points }}</label>
						<div class="col-sm-10">
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_rewardpoints" value="1" {{ account_dashboard_total_rewardpoints ? 'checked="checked"' : '' }} />
							{{ text_yes }}                
						  </label>
						  <label class="radio-inline">
							<input type="radio" name="account_dashboard_total_rewardpoints" value="0" {{ not account_dashboard_total_rewardpoints ? 'checked="checked"' : '' }} />
							{{ text_no }}
						  </label>
						</div>
					</div>
				</fieldset>				
			</div>
			<div class="tab-pane" id="tab-profile">
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
					<div class="col-sm-10">
					  <select name="account_dashboard_customer_picture_status" id="input-status" class="form-control">
						{% if account_dashboard_customer_picture_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
						{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
						{% endif %}
					  </select>
					</div>
				</div>				
				<div class="form-group">
				  <label class="col-sm-2 control-label" for="input-file-ext-allowed"><span data-toggle="tooltip" title="{{ help_file_ext_allowed }}">{{ entry_file_ext_allowed }}</span></label>
				  <div class="col-sm-10">
					<textarea name="account_dashboard_file_ext_allowed" rows="5" placeholder="{{ entry_file_ext_allowed }}" id="input-file-ext-allowed" class="form-control">{{ account_dashboard_file_ext_allowed }}</textarea>
				  </div>
				</div>
				<div class="form-group">
				  <label class="col-sm-2 control-label" for="input-file-mime-allowed"><span data-toggle="tooltip" title="{{ help_file_mime_allowed }}">{{ entry_file_mime_allowed }}</span></label>
				  <div class="col-sm-10">
					<textarea name="account_dashboard_file_mime_allowed" rows="5" placeholder="{{ entry_file_mime_allowed }}" id="input-file-mime-allowed" class="form-control">{{ account_dashboard_file_mime_allowed }}</textarea>
				  </div>
				</div>				
			</div>
			<div class="tab-pane" id="tab-template">
				<div class="form-group required">
	                <label class="col-sm-2 control-label" for="input-theme">{{ entry_template }}</label>
	                <div class="col-sm-10">
	                  <select name="account_dashboard_template" id="input-template" class="form-control">
	                  	{% for template in templates %}
	                  	{% if template.template_id == account_dashboard_template %}
	                    <option value="{{ template.template_id }}" selected="selected">{{ template.name }}</option>
	                    {% else %}
	                    <option value="{{ template.template_id }}">{{ template.name }}</option>
	                    {% endif %}
	                    {% endfor %}
	                  </select> 
	                  <br>
	                  <img src="" alt="" id="template" class="img-thumbnail" />
	              	</div>
              	</div>
			</div>
			<div class="tab-pane" id="tab-account_dashboard-links">
				<div class="row">
                <div class="col-sm-4 col-xs-12 col-md-3">
                  <ul class="nav nav-pills nav-stacked" id="links">
                  {% set link_row = 0 %}
                    {% for link in links %}
                    {% set counter = link_row + 1 %}
                    <li class="links-li"><a href="#tab-link{{ link_row }}" data-toggle="tab"><i class="fa fa-minus-circle" onclick="$('a[href=\'#tab-link{{ link_row }}\']').parent().remove(); $('#tab-link{{ link_row }}').remove(); $('#links a:first').tab('show');"></i> {{ link.description[config_language_id].title ? link.description[config_language_id].title : tab_link ~ '-' ~ counter }} <i class="fa fa-arrows pull-right" aria-hidden="true"></i></a></li>
                    {% set link_row = link_row + 1 %}
                    {% endfor %}
                  </ul>
                  <ul class="nav nav-pills nav-stacked addlinkbutton">
                    <li><button type="button" class="btn btn-default btn-block" onclick="addLink();"><i class="fa fa-plus-circle" aria-hidden="true"></i> {{ button_add_link }}</button></li>
                  </ul>
                </div>
                <div class="col-sm-8 col-xs-12 col-md-9">
                  <div class="tab-content" id="tab-content">
                  {% set link_row = 0 %}
                    {% for link_key, link in links %}
                    <div class="tab-pane" id="tab-link{{ link_row }}">
                        <div class="link-group">
                          <ul class="nav nav-tabs" id="link-language{{ link_row }}">
                            {% for language in languages %}
                            <li><a href="#link-language{{ link_row }}-{{ language.language_id }}" data-toggle="tab">
                            <img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> 
                            </a></li>
                            {% endfor %}
                          </ul>
                          <div class="tab-content">
                            {% for language in languages %}
                            <div class="tab-pane" id="link-language{{ link_row }}-{{ language.language_id }}">
                              <div class="form-group required">
                                <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_title }}">{{ entry_title }}</span></label>
                                <div class="col-sm-10">
                                  <input type="text" name="account_dashboard_link[{{ link_row }}][description][{{ language.language_id }}][title]" value="{{ link.description[language.language_id].title ? link.description[language.language_id].title }}" placeholder="{{ entry_title }}" class="form-control" />
                                  {% if error_title[link_key][language.language_id] %}
                                  	<div class="text-danger">{{ error_title[link_key][language.language_id] }}</div>
                                  {% endif %}
                                </div>
                              </div>  
                            </div>  
                            {% endfor %}
                          </div>
                        </div>
                      <fieldset>
                        <legend>{{ text_type_setting }}</legend>
                        <div class="form-group required">
                          <label class="col-sm-2 control-label">{{ entry_link }}</label>
                          <div class="col-sm-10">
                            <input type="text" name="account_dashboard_link[{{ link_row }}][link]" class="form-control" value="{{ link.link }}" />
                            {% if errorlink[link_key] %}
	                          <div class="text-danger">{{ errorlink[link_key] }}</div>
	                    	{% endif %}
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">{{ entry_status }}</label>
                          <div class="col-sm-10">
                            <select name="account_dashboard_link[{{ link_row }}][status]" class="form-control link-status" rel="{{ link_row }}">
                              {% if link.status %}
                              <option value="1" selected="selected">{{ text_enabled }}</option>
                              <option value="0">{{ text_disabled }}</option>
                              {% else %}
                              <option value="1">{{ text_enabled }}</option>
                              <option value="0" selected="selected">{{ text_disabled }}</option>
                              {% endif %}
                            </select>
                          </div>
                        </div>
	                     <div class="form-group">
							<label class="col-sm-2 control-label">{{ entry_icontype }}</label>
							<div class="col-sm-10">
								<label class="radio-inline icon_type">
									{% if link.type == 'image' %}
										<input type="radio" rel="{{ link_row }}" name="account_dashboard_link[{{ link_row }}][type]" value="image"  checked="checked" /> {{ text_type1 }}
									{% else %}
										<input type="radio" rel="{{ link_row }}" name="account_dashboard_link[{{ link_row }}][type]" value="image" /> {{ text_type1 }}
									{% endif %}
								</label>
								<label class="radio-inline icon_type">
									{% if link.type == 'icon' %}
										<input type="radio" rel="{{ link_row }}" name="account_dashboard_link[{{ link_row }}][type]" value="icon" checked="checked" /> {{ text_type2 }}
									{% else %}
										<input type="radio" rel="{{ link_row }}" name="account_dashboard_link[{{ link_row }}][type]" value="icon" /> {{ text_type2 }}
									{% endif %}
								</label>
							</div>
						</div>
						<div class="linkimage-{{ link_row }}" style="{% if link.type == 'icon' %} {{ 'display: none;' }} {% endif %}" id="linkimage-{{ link_row }}">
							<div class="form-group required">
								<label class="col-sm-2 control-label">{{ entry_image }}</label>
								<div class="col-sm-10"><a href="" id="thumb-image{{ link_row }}" data-toggle="image" class="img-thumbnail img-circle"><img class="img-responsive img-circle" src="{{ link.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
									<input type="hidden" name="account_dashboard_link[{{ link_row }}][image]" value="{{ link.image }}" id="input-image{{ link_row }}" />	
									{% if error_image[link_key] %}
	                                  <div class="text-danger">{{ error_image[link_key] }}</div>
                                	{% endif %}
								</div>
							</div>              
						</div>
						<div class="linkicon-{{ link_row }}" style="{% if link.type == 'image' %} {{ 'display: none;' }} {% endif %}" id="linkicon-{{ link_row }}">
							<div class="form-group required">
								<label class="col-sm-2 control-label" for="input-icon_class">{{ entry_iconclass }}</label>
								<div class="col-sm-10">
									<input type="text" class="form-control" name="account_dashboard_link[{{ link_row }}][icon_class]" placeholder="{{ entry_iconclass }}" value="{{ link.icon_class }}" />
									{% if error_icon_class[link_key] %}
	                                  <div class="text-danger">{{ error_icon_class[link_key] }}</div>
                                	{% endif %}
								</div>
							</div>
						</div>
                        <div class="form-group hide">
                          <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_sort_order }}">{{ entry_sort_order }}</span></label>
                          <div class="col-sm-10">
                            <input type="text" name="account_dashboard_link[{{ link_row }}][sort_order]"  value="{{ link.sort_order }}" class="form-control link-sortorder" />
                          </div>
                        </div>
                      </fieldset>
                    </div>
                    {% set link_row = link_row + 1 %}
                  {% endfor %}
                  </div>
                </div>
              </div>				
			</div>
			<div class="tab-pane" id="tab-affiliate-links">
