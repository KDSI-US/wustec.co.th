<fieldset xmlns:v-bind="http://www.w3.org/1999/xhtml" xmlns:v-on="http://www.w3.org/1999/xhtml">
    <legend>Free text</legend>
    <table data-tv-wrapper class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <td class="text-left">Field</td>
            <td class="text-left small-td">Print Position From Left (cm)</td>
            <td class="text-left small-td">Print Position From Right (cm)</td>
            <td class="text-left small-td">Print Position From Top (cm)</td>
            <td class="text-right small-td">Action</td>
        </tr>
        </thead>

        <tbody>

        <tr v-for="(field, index) in fields" v-bind:key="field.uuid" v-if="field.slug === 'freetext'">

            <td class="text-left">

                <input type="hidden" v-bind:name="'raw[fields][' + index + '][slug]'"
                       v-model="field.slug"
                       value="freetext" />

                <input type="text"
                       v-bind:name="'raw[fields][' + index + '][text_content]'"
                       v-model="field.text_content"
                       class="form-control" />
            </td>
            <td class="text-left">
                <input type="text" placeholder="E.g. 5.5" class="form-control"
                       v-bind:name="'raw[fields][' + index + '][left]'"
                       v-on:keyup="myKeypress(index, 'left')"
                       v-model="field.left" />
            </td>
            <td class="text-left">
                <input type="text" placeholder="E.g. 5.5" class="form-control"
                       v-bind:name="'raw[fields][' + index + '][right]'"
                       v-on:keyup="myKeypress(index, 'right')"
                       v-model="field.right" />
            </td>
            <td class="text-right">
                <input type="text" placeholder="E.g. 4" class="form-control"
                       v-bind:name="'raw[fields][' + index + '][top]'"
                       v-on:keyup="myKeypress(index, 'top')"
                       v-model="field.top" />
            </td>
            <td class="text-right">
                <button type="button" v-on:click="removeTableRow(index)" data-toggle="tooltip" class="btn btn-danger"
                        data-original-title="Remove"><i class="fa fa-minus-circle"></i></button>
            </td>
        </tr>

        </tbody>

        <tfoot>
        <tr>
            <td colspan="4"></td>
            <td class="text-right">
                <button v-on:click="addTableRow('freetext')" type="button" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Add field"><i class="fa fa-plus-circle"></i></button>
            </td>
        </tr>
        </tfoot>
    </table>
</fieldset>