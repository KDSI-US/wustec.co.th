<fieldset xmlns:v-bind="http://www.w3.org/1999/xhtml" xmlns:v-on="http://www.w3.org/1999/xhtml">
    <legend>Layout vue</legend>
    <table class="table table-striped table-bordered table-hover vue-green">
        <thead>
        <tr>
            <td class="text-left">Field</td>
            <td class="text-left small-td">Print Position From Left (cm)</td>
            <td class="text-left small-td">Print Position From Right (cm)</td>
            <td class="text-right small-td">Print Position From Top (cm)</td>
            <td class="text-right small-td">Action</td>
        </tr>
        </thead>

        <tbody>

        <tr v-for="(field, index) in fields" v-bind:key="field.uuid" v-if="field.slug !== 'product_loop' && field.slug !== 'freetext'">
            <td class="text-left">
                <select v-bind:name="'raw[fields][' + index + '][slug]'" v-model="field.slug" class="form-control">

                    <option value="">Select a field</option>

                    <optgroup label="Customer info">
                        <option {{ field.slug == 'firstname' ? 'selected' : '' }}  value="firstname">Firstname</option>
                        <option {{ field.slug == 'lastname'  ? 'selected' : '' }}  value="lastname">Lastname</option>
                        <option {{ field.slug == 'telephone' ? 'selected' : '' }}  value="telephone">Telephone</option>
                        <option {{ field.slug == 'company'   ? 'selected' : '' }}  value="company">Company</option>
                        <option {{ field.slug == 'address1'  ? 'selected' : '' }}  value="address1">Address 1</option>
                        <option {{ field.slug == 'address2'  ? 'selected' : '' }}  value="address2">Address 2</option>
                        <option {{ field.slug == 'city'      ? 'selected' : '' }}  value="city">City</option>
                        <option {{ field.slug == 'postcode'  ? 'selected' : '' }}  value="postcode">Postcode</option>
                        <option {{ field.slug == 'zone'      ? 'selected' : '' }}  value="zone">Zone</option>
                        <option {{ field.slug == 'zone_code' ? 'selected' : '' }}  value="zone_code">Zone code</option>
                        <option {{ field.slug == 'country'   ? 'selected' : '' }}  value="country">Country</option>
                    </optgroup>

                    <optgroup label="Order info">
                        <option {{ field.slug =='order_id'      ? 'selected' : '' }} value="order_id">Order ID</option>
                        <option {{ field.slug =='total'         ? 'selected' : '' }} value="total">Total</option>
                        <option {{ field.slug =='sub_total'     ? 'selected' : '' }} value="sub_total">Sub Total</option>
                        <option {{ field.slug =='shipping_cost' ? 'selected' : '' }} value="shipping_cost">Shipping cost</option>
                        <option {{ field.slug =='comment'       ? 'selected' : '' }} value="comment">Comment</option>

                    </optgroup>

                    <optgroup label="Shipping Address">
                        <option {{ field.slug =='shipping_address_firstname' ? 'selected' : '' }} value="shipping_address_firstname">Shipping address firstname</option>
                        <option {{ field.slug =='shipping_address_lastname'  ? 'selected' : '' }} value="shipping_address_lastname">Shipping address lastname</option>
                        <option {{ field.slug =='shipping_address_company'   ? 'selected' : '' }} value="shipping_address_company">Shipping address company</option>
                        <option {{ field.slug =='shipping_address_1'         ? 'selected' : '' }} value="shipping_address_1">Shipping address 1</option>
                        <option {{ field.slug =='shipping_address_2'         ? 'selected' : '' }} value="shipping_address_2">Shipping address 2</option>
                        <option {{ field.slug =='shipping_address_city'      ? 'selected' : '' }} value="shipping_address_city">Shipping address city</option>
                        <option {{ field.slug =='shipping_address_postcode'  ? 'selected' : '' }} value="shipping_address_postcode">Shipping address postcode</option>
                        <option {{ field.slug =='shipping_address_zone'      ? 'selected' : '' }} value="shipping_address_zone">Shipping address zone</option>
                        <option {{ field.slug =='shipping_address_country'   ? 'selected' : '' }} value="shipping_address_country">Shipping address country</option>
                        <option {{ field.slug =='shipping_address_formatted' ? 'selected' : '' }} value="shipping_address_formatted">Full Shipping address formatted</option>

                        <!--
                      custom fields not supported in oc3 need to be developed later
                      {% for custom_field in address_custom_fields %}
                          <option <?php if($value == 'shipping_address_custom_field_' . $custom_field['custom_field_id']) echo 'selected' ?> value="shipping_address_custom_field_{{ custom_field.custom_field_id }}">{{ custom_field.name }}</option>
                      {% endfor %}
                      -->

                    </optgroup>

                    <optgroup label="Payment Address">
                        <option {{ field.slug =='payment_address_firstname' ? 'selected' : '' }} value="payment_address_firstname">Payment address firstname</option>
                        <option {{ field.slug =='payment_address_lastname'  ? 'selected' : '' }} value="payment_address_lastname">Payment address lastname</option>
                        <option {{ field.slug =='payment_address_company'   ? 'selected' : '' }} value="payment_address_company">Payment address company</option>
                        <option {{ field.slug =='payment_address_1'         ? 'selected' : '' }} value="payment_address_1">Payment address 1</option>
                        <option {{ field.slug =='payment_address_2'         ? 'selected' : '' }} value="payment_address_2">Payment address 2</option>
                        <option {{ field.slug =='payment_address_city'      ? 'selected' : '' }} value="payment_address_city">Payment address city</option>
                        <option {{ field.slug =='payment_address_postcode'  ? 'selected' : '' }} value="payment_address_postcode">Payment address postcode</option>
                        <option {{ field.slug =='payment_address_zone'      ? 'selected' : '' }} value="payment_address_zone">Payment address zone</option>
                        <option {{ field.slug =='payment_address_country'   ? 'selected' : '' }} value="payment_address_country">Payment address country</option>

                        <!--
                          custom fields not supported in oc3 need to be developed later
                          {% for custom_field in address_custom_fields %}
                          <option <?php if($value=='payment_address_custom_field_' . $custom_field['custom_field_id']) echo 'selected' ?> value="payment_address_custom_field_{{ custom_field.custom_field_id }}">{{ custom_field.name }}</option>
                          {% endfor %}
                        -->
                    </optgroup>

                    <optgroup label="Store info">
                        <option {{ field.slug =='store_owner_name' ? 'selected' : ''  }} value="store_owner_name">Store owner name</option>
                        <option {{ field.slug =='store_name'       ? 'selected' : ''  }} value="store_name">Store name</option>
                        <option {{ field.slug =='store_address'    ? 'selected' : ''  }} value="store_address">Store address</option>
                        <option {{ field.slug =='store_telephone'  ? 'selected' : ''  }} value="store_telephone">Store telephone</option>
                    </optgroup>

                    <optgroup label="Other info">
                        <option {{ field.slug =='current_date' ? 'selected' : ''  }} value="current_date">Current date</option>
                        <option {{ field.slug =='current_time' ? 'selected' : ''  }} value="current_time">Current time</option>
                    </optgroup>

                    <!--
                    <option value="use_template">Use template</option>
                    -->
                </select>
            </td>

            <td class="text-left">
                <input type="text" placeholder="E.g. 4.5"  class="form-control"
                       v-bind:name="'raw[fields][' + index + '][left]'"
                       v-on:keyup="myKeypress(index, 'left')"
                       v-model="field.left">
            </td>
            <td class="text-left">
                <input type="text" placeholder="E.g. 4.5"  class="form-control"
                       v-bind:name="'raw[fields][' + index + '][right]'"
                       v-on:keyup="myKeypress(index, 'right')"
                       v-model="field.right">
            </td>
            <td class="text-right">
                <input type="text" placeholder="E.g. 4"    class="form-control"
                       v-bind:name="'raw[fields][' + index + '][top]'"
                       v-on:keyup="myKeypress(index, 'top')"
                       v-model="field.top">
            </td>
            <td class="text-right">
                <button type="button" v-on:click="removeTableRow(index)" data-toggle="tooltip" title="" class="btn btn-danger" data-original-title="Remove"><i class="fa fa-minus-circle"></i></button>
            </td>
        </tr>

        </tbody>

        <tfoot>
        <tr>
            <td colspan="4"></td>
            <td class="text-right">
                <button v-on:click="addTableRow('layout_field')" type="button" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Add field"><i class="fa fa-plus-circle"></i></button>
            </td>
        </tr>
        </tfoot>
    </table>

</fieldset>