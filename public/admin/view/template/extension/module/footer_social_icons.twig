{{ header }}
{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        {% if success %}
        <div class="alert alert-success alert-dismissible pull-left"><i class="fa fa-exclamation-circle"></i>
          {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>&nbsp;{% endif %}
        <button type="submit" form="form-module" data-toggle="tooltip"
          onclick="$('#form-module').attr('action', $('#form-module').attr('action') + '&goedit')"
          title="{{ button_save_changes }}" class="btn btn-success">{{ button_save_changes }}</button>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}"
          class="btn btn-primary">{{ button_save }}</button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
            class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module"
          class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-facebook-link"><i class="fa fa-facebook-square fa-2x"
                aria-hidden="true" style="color:#4267b2"></i><!-- {{ entry_facebook_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_facebook_link"
                value="{{ module_footer_social_icons_facebook_link }}" placeholder="{{ entry_facebook_link }}"
                id="input-facebook-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-twitter-link"><i class="fa fa-twitter-square fa-2x"
                aria-hidden="true" style="color:#38A1F3"></i><!-- {{ entry_twitter_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_twitter_link"
                value="{{ module_footer_social_icons_twitter_link }}" placeholder="{{ entry_twitter_link }}"
                id="input-twitter-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-instagram-link"><i class="fa fa-instagram fa-2x"
                aria-hidden="true" style="color:#e4405f"></i><!-- {{ entry_instagram_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_instagram_link"
                value="{{ module_footer_social_icons_instagram_link }}" placeholder="{{ entry_instagram_link }}"
                id="input-instagram-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-youtube-link"><i class="fa fa-youtube-square fa-2x"
                aria-hidden="true" style="color:#ED3833"></i> <!-- {{ entry_youtube_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_youtube_link"
                value="{{ module_footer_social_icons_youtube_link }}" placeholder="{{ entry_youtube_link }}"
                id="input-youtube-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-googlep-link"><i class="fa fa-google-plus-square fa-2x"
                aria-hidden="true" style="color:#dc4e41"></i><!-- {{ entry_googlep_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_googlep_link"
                value="{{ module_footer_social_icons_googlep_link }}" placeholder="{{ entry_googlep_link }}"
                id="input-googlep-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-pinterest-link"><i class="fa fa-pinterest-square fa-2x"
                aria-hidden="true" style="color:#BD081C"></i><!-- {{ entry_pinterest_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_pinterest_link"
                value="{{ module_footer_social_icons_pinterest_link }}" placeholder="{{ entry_pinterest_link }}"
                id="input-pinterest-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-linkedin-link"><i class="fa fa-linkedin-square fa-2x"
                aria-hidden="true" style="color:#0077B5"></i><!-- {{ entry_linkedin_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_linkedin_link"
                value="{{ module_footer_social_icons_linkedin_link }}" placeholder="{{ entry_linkedin_link }}"
                id="input-linkedin-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-whatsapp-link"><i class="fa fa-whatsapp fa-2x"
                aria-hidden="true" style="background-color:#43d854;color:#FFF"></i>
              <!-- {{ entry_whatsapp_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_whatsapp_link"
                value="{{ module_footer_social_icons_whatsapp_link }}" placeholder="{{ entry_whatsapp_link }}"
                id="input-whatsapp-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-blog-link"><i class="fa fa-wordpress fa-2x"
                aria-hidden="true" style="color:#00405d"></i><!-- {{ entry_blog_link }} --></label>
            <div class="col-sm-10">
              <input type="text" name="module_footer_social_icons_blog_link"
                value="{{ module_footer_social_icons_blog_link }}" placeholder="{{ entry_blog_link }}"
                id="input-blog-link" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_mstatus }}</label>
            <div class="col-sm-10">
              <select name="module_footer_social_icons_status" id="input-status" class="form-control">
                {% if module_footer_social_icons_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <section class="text-center">
              Powered by <a
                href="//kingdomdreamsolutions.com/"
                target="_blank"><b><u>Kingdom Dream Solutions, Inc.</u></b></a>
            </section>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{ footer }}