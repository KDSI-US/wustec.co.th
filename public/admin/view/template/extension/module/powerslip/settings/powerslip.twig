{{ header }}{{ column_left }}

<div id="content">

  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ action_add }}" data-tv-role="update-menu" class="btn btn-danger"><i class="fa fa-plus"></i> Templates</a>
        <button type="submit" name="submit_btn" value="save_and_stay" form="tv-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i> Save and stay</button>
        <button type="submit" form="tv-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error.error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    <div class="panel panel-default">
    
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }} 2.0.3</h3>
        </div>
    
    
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="tv-form" class="form-horizontal">
            
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab-troubleshooting" data-toggle="tab">Troubleshooting</a></li>
            </ul>
            
            <div class="tab-content">

              {{ tab_troubleshooting }}

            </div><!-- .tab-content all tabs wrapper -->
            
          </form>
                  
        </div><!-- .panel-body -->
     </div>
  </div><!-- .container-fluid -->
  
  <div>
    <div class="container-fluid">
    
      <div class="pull-right">
        <button type="submit" form="tv-form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>

      
    </div>
  </div>

</div><!-- #content -->