{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name_mod }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name_mod }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-album"><span data-toggle="tooltip" title="{{ help_album }}">{{ entry_albums }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="album_name" value="" placeholder="{{ entry_name }}" id="input-album" class="form-control" />
              <div id="featured-album" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for album in albums %}
                <div id="featured-album{{ album.album_id }}"><i class="fa fa-minus-circle"></i> {{ album.name }}
                  <input type="hidden" name="album[]" value="{{ album.album_id }}" />
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-view">{{ entry_album_view }}</label>
              <div class="col-sm-10">
                  <select name="view" id="input-view" class="form-control">
                      <option value="0" {{ "0" == view ? "selected" : "" }}>{{ text_format_grid }}</option>
                      <option value="1" {{ "1" == view ? "selected" : "" }}>{{ text_format_list }}</option>
                      <option value="2" {{ "2" == view ? "selected" : "" }}>{{ text_format_carousel }}</option>
                      <option value="3" {{ "3" == view ? "selected" : "" }}>{{ text_format_masonry }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-title">{{ entry_album_title }}</label>
              <div class="col-sm-10">
                  <select name="album_title" id="input-title" class="form-control">
                      <option value="2" {{ "2" == album_title ? "selected" : "" }}>{{ text_disabled }}</option>
                      <option value="0" {{ "0" == album_title ? "selected" : "" }}>{{ text_before_images }}</option>
                      <option value="1" {{ "1" == album_title ? "selected" : "" }}>{{ text_after_images }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-description">{{ entry_album_description }}</label>
              <div class="col-sm-10">
                  <select name="album_description" id="input-description" class="form-control">
                      <option value="2" {{ "2" == album_description ? "selected" : "" }}>{{ text_disabled }}</option>
                      <option value="0" {{ "0" == album_description ? "selected" : "" }}>{{ text_before_images }}</option>
                      <option value="1" {{ "1" == album_description ? "selected" : "" }}>{{ text_after_images }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-image-title">{{ entry_album_image_title }}</label>
              <div class="col-sm-10">
                  <select name="image_title" id="input-image-title" class="form-control">
                      <option value="4" {{ "4" == image_title ? "selected" : "" }}>{{ text_disabled }}</option>
                      <option value="0" {{ "0" == image_title ? "selected" : "" }}>{{ text_after_image }}</option>
                      <option value="1" {{ "1" == image_title ? "selected" : "" }}>{{ text_before_image }}</option>
                      <option value="2" {{ "2" == image_title ? "selected" : "" }}>{{ text_on_image_hover }}</option>
                      <option value="3" {{ "3" == image_title ? "selected" : "" }}>{{ text_on_image }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-image-description">{{ entry_album_image_description }}</label>
              <div class="col-sm-10">
                  <select name="image_description" id="input-image-description" class="form-control">
                      <option value="4" {{ "4" == image_description ? "selected" : "" }}>{{ text_disabled }}</option>
                      <option value="0" {{ "0" == image_description ? "selected" : "" }}>{{ text_after_image }}</option>
                      <option value="1" {{ "1" == image_description ? "selected" : "" }}>{{ text_before_image }}</option>
                      <option value="2" {{ "2" == image_description ? "selected" : "" }}>{{ text_on_image_hover }}</option>
                      <option value="3" {{ "3" == image_description ? "selected" : "" }}>{{ text_on_image }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-grid">{{ entry_image_grid }}</label>
              <div class="col-sm-10">
                  <select name="grid" id="input-grid" class="form-control">
                      <option value="1" {{ "1" == grid ? "selected" : "" }}>1</option>
                      <option value="2" {{ "2" == grid ? "selected" : "" }}>2</option>
                      <option value="3" {{ "3" == grid ? "selected" : "" }}>3</option>
                      <option value="4" {{ "4" == grid ? "selected" : "" }}>4</option>
                      <option value="6" {{ "6" == grid ? "selected" : "" }}>6</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-2 control-label" for="input-animation">{{ entry_image_animation }}</label>
              <div class="col-sm-10">
                  <select name="animation" id="input-animation" class="form-control">
                      <option value="0" {{ "0" == animation ? "selected" : "" }}>{{ text_disabled }}</option>
                      <option value="1" {{ "1" == animation ? "selected" : "" }}>{{ text_enabled }}</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-width">{{ entry_image_width }}</label>
            <div class="col-sm-10">
              <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_image_width }}" id="input-width" class="form-control" />
              {% if error_width %}
              <div class="text-danger">{{ error_width }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-height">{{ entry_image_height }}</label>
            <div class="col-sm-10">
              <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_image_height }}" id="input-height" class="form-control" />
              {% if error_height %}
              <div class="text-danger">{{ error_height }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-css">{{ entry_album_css }}</label>
            <div class="col-sm-10">
              <textarea name="css" placeholder="{{ entry_album_css }}" id="input-css" class="form-control" rows="5">{{ css }}</textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--
$('input[name=\'album_name\']').autocomplete({
	source: function(request, response) {
		$.ajax({
			url: 'index.php?route=extension/module/galleria/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'],
						value: item['galleria_id']
					}
				}));
			}
		});
	},
	select: function(item) {
		$('input[name=\'album_name\']').val('');
		
		$('#featured-album' + item['value']).remove();
		
		$('#featured-album').append('<div id="album-album' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="album[]" value="' + item['value'] + '" /></div>');	
	}
});
	
$('#featured-album').delegate('.fa-minus-circle', 'click', function() {
	$(this).parent().remove();
});
//--></script></div>
{{ footer }}
