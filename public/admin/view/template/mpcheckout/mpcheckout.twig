                <div class="col-sm-10">
                  <input type="text" name="mpcheckout_postcode" id="input-postcode" class="form-control" value="{{ mpcheckout_postcode }}" />
                </div>
              </div>
              <div class="form-group mp-buttons">
                <label class="col-sm-2 control-label">{{ entry_stopcartpage }}</label>
                <div class="col-sm-3">
                  <div class="btn-group btn-group-justified" data-toggle="buttons">
                    <label class="btn btn-primary {{ mpcheckout_stopcartpage ? 'active' : '' }}">
                      <input type="radio" name="mpcheckout_stopcartpage" value="1" {{ mpcheckout_stopcartpage ? 'checked="checked"' : '' }} />
                      {{ text_yes }}                            
                    </label>
                    <label class="btn btn-primary {{ not mpcheckout_stopcartpage ? 'active' : '' }}">
                      <input type="radio" name="mpcheckout_stopcartpage" value="0" {{ not mpcheckout_stopcartpage ? 'checked="checked"' : '' }} />
                      {{ text_no }}                            
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-panel">
              <div class="row">
                <div class="col-sm-3">
                  <ul class="nav nav-pills nav-stacked ostab" id="panels">
