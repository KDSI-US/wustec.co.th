                        <label class="col-sm-12 control-label">{{ entry_newsletter_subscribe_check }}</label>
                        <div class="col-sm-4">
                          <div class="btn-group btn-group-justified" data-toggle="buttons">
                            <label class="btn btn-primary {{ mpcheckout_account_panel.newsletter_subscribe_check ? 'active' : '' }}">
                              <input type="radio" name="mpcheckout_account_panel[newsletter_subscribe_check]" value="1" {{ mpcheckout_account_panel.newsletter_subscribe_check ? 'checked="checked"' : '' }} />
                            {{ text_yes }}                            
                            </label>
                            <label class="btn btn-primary {{ not mpcheckout_account_panel.newsletter_subscribe_check ? 'active' : '' }}">
                              <input type="radio" name="mpcheckout_account_panel[newsletter_subscribe_check]" value="0" {{ not mpcheckout_account_panel.newsletter_subscribe_check ? 'checked="checked"' : '' }} />
                              {{ text_no }}                            
