                <label class="col-sm-2 control-label" for="input-zone"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_zone }}">{{ entry_zone }}</span></label>
                <div class="col-sm-10">
                  <select name="mpcheckout_zone_id" id="input-zone" class="form-control"></select>
                  {% if error_zone %}
                  <div class="text-danger">{{ error_zone }}</div>
                  {% endif %}
                </div>
              </div>
