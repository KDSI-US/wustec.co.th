                      </div>
                      <div class="form-group mp-buttons">
                        <label class="col-sm-12 control-label"><span data-toggle="tooltip" data-container="#tab-general" title="{{ help_default_account_button }}">{{ entry_default_account_button }}</span></label>
                        <div class="col-sm-5">
                          <div class="btn-group btn-group-justified" data-toggle="buttons">
                            <label class="btn btn-primary {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'register' ? 'active' : '' }}">
                              <input type="radio" name="mpcheckout_account_button[default_account_button]" value="register" {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'register' ? 'checked="checked"' : '' }} />
                              <i class="fa fa-user-plus" aria-hidden="true"></i> {{ text_register }}
                            </label>
                            <label class="btn btn-primary {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'guest' ? 'active' : '' }}">                            
                              <input type="radio" name="mpcheckout_account_button[default_account_button]" value="guest" {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'guest' ? 'checked="checked"' : '' }} /> <i class="fa fa-user-secret" aria-hidden="true"></i> {{ text_guest }}
                            </label>
                            <label class="btn btn-primary {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'login' ? 'active' : '' }}">                            
                              <input type="radio" name="mpcheckout_account_button[default_account_button]" value="login" {{ mpcheckout_account_button.default_account_button and mpcheckout_account_button.default_account_button == 'login' ? 'checked="checked"' : '' }} /> <i class="fa fa-sign-in" aria-hidden="true"></i> {{ text_login }}
                            </label>
                          </div>
                          {% if error_default_account_button %}
                          <br/>
                          <div class="text-danger">{{ error_default_account_button }}</div>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                    <div class="tab-pane" id="navtab-account-panel">
                      <div class="form-group">
                        <label class="col-sm-12 control-label" for="input-customer-group"><span data-toggle="tooltip" title="{{ help_customer_group }}">{{ entry_customer_group }}</span></label>
                        <div class="col-sm-12">
                          <select name="mpcheckout_account_panel[customer_group_id]" id="input-customer-group" class="form-control">
                            {% for customer_group in customer_groups %}
                            {% if mpcheckout_account_panel.customer_group_id and customer_group.customer_group_id == mpcheckout_account_panel.customer_group_id %}
                            <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                            {% else %}
                            <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                            {% endif %}
                            {% endfor %}
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-12 control-label"><span data-toggle="tooltip" title="{{ help_account_terms }}">{{ entry_account_terms }}</span></label>
                        <div class="col-sm-12">
                          <select name="mpcheckout_account_panel[account_id]" class="form-control">
                            <option value="0">{{ text_none }}</option>
                            {% for information in informations %}
                            {% if mpcheckout_account_panel.account_id and information.information_id == mpcheckout_account_panel.account_id %}
