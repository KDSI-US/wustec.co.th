                      <fieldset>
                        <legend>{{ legend_account_fields }}</legend>
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                              <td class="text-left">{{ column_field_name }}</td>
                              <td class="text-right">{{ column_status }}</td>
                            </tr>
                          </thead>
                          <tbody>
                            {% for field in account_fields %}
                            {% if field.code == 'email' or field.code == 'password' %}
                              {% set hide_class = 'hide' %}
                            {% else %}
                              {% set hide_class = '' %}
                            {% endif %}
                            <tr class="{{ hide_class }}">
                              <td class="text-left">{{ field.title }}</td>
                              <td class="text-right">
                                <div class="btn-group" data-toggle="buttons">
                                  <label class="btn btn-primary {{ mpcheckout_account_panel.fields[field.code] and mpcheckout_account_panel.fields[field.code] == '1' ? 'active' : '' }}">
                                    <input type="radio" name="mpcheckout_account_panel[fields][{{ field.code }}]" autocomplete="off" value="1" {{ mpcheckout_account_panel.fields[field.code] and mpcheckout_account_panel.fields[field.code] == '1' ? 'checked' : '' }} />{{ text_display_yes_required }}
