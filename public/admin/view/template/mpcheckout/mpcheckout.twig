                          <div class="btn-group btn-group-justified" data-toggle="buttons">
                            <label class="btn btn-primary {{ mpcheckout_account_panel.newsletter_subscribe ? 'active' : '' }}">
                              <input type="radio" name="mpcheckout_account_panel[newsletter_subscribe]" value="1" {{ mpcheckout_account_panel.newsletter_subscribe ? 'checked="checked"' : '' }} />
                            {{ text_enabled }}                            
                            </label>
                            <label class="btn btn-primary {{ not mpcheckout_account_panel.newsletter_subscribe ? 'active' : '' }}">
                              <input type="radio" name="mpcheckout_account_panel[newsletter_subscribe]" value="0" {{ not mpcheckout_account_panel.newsletter_subscribe ? 'checked="checked"' : '' }} />
                              {{ text_disabled }}                            
                            </label>
                          </div>
                        </div>
                      </div>
