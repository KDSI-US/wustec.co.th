{{ header }}
<link href="catalog/view/theme/OPC100246/stylesheet/pastor_column.css" rel="stylesheet" type="text/css" />
<div id="pastor-column-category" class="container">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<div class="row">
		{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-sm-6' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-sm-9' %}
		{% else %}
			{% set class = 'col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">
			{{ content_top }}
			<div class="box-content">
				<div class="row">
					{% for pastor_column_category in pastor_column_categories %}
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="mainbox">
							<h2><a href="{{ pastor_column_category.href }}">{{ pastor_column_category.title }}</a></h2>
							<div class="images">
								{% if pastor_column_category.image %}
								<a href="{{ pastor_column_category.href }}"><img src="{{ pastor_column_category.image }}"/></a>
								{% endif %}
							</div>
							{{ pastor_column_category.description }}	
						</div>
					</div>
					{% endfor %}
				<div class="pagination">{{ pagination }}</div>
			</div>
			<br class="clear" />
		</div> 
		{{ content_bottom }}
	</div>
	{{ column_right }}
</div>
<div class="clearfix"></div>
</div>
{{ footer }}
