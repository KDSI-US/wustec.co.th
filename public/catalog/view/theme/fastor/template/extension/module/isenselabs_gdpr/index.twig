{{ header }} 
<div class="container">

  <div class="breadcrumb full-width">
    <div class="background-breadcrumb"></div>
      <div class="background">
        <div class="shadow"></div>
          <div class="pattern">
            <div class="container">
             <div class="clearfix">
               <h1 id="title-page">{{ text_gdpr }}</h1>
               <ul>
               {% for breadcrumb in breadcrumbs %} 
               <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
               {% endfor %} 
               </ul>
             </div>
           </div>
         </div>
       </div>
  </div>

  <div class="row">{{ column_left }} 
    {% if (column_left and column_right) %} 
    {% set class = 'col-sm-6' %} 
    {% elseif (column_left or column_right) %} 
    {% set class = 'col-sm-9' %} 
    {% else %} 
    {% set class = 'col-sm-12' %} 
    {% endif %} 
    <div id="content" class="{{ class }}">{{ content_top }} 
		<h1>{{ text_data_rectification }}</h1>
		<p>{{ text_data_rectification_helper }}</p>
		<ul class="list-unstyled">
			<li>&rarr; <a href="{{ edit }}">{{ text_edit }}</a></li>
			<li>&rarr; <a href="{{ password }}">{{ text_password }}</a></li>
			<li>&rarr; <a href="{{ address }}">{{ text_address }}</a></li>
			<li>&rarr; <a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
		</ul>

		<h1>{{ text_data_portability }}</h1>
		<p>{{ text_data_portability_helper }}</p>
		<ul class="list-unstyled">
			<li>&rarr; <a href="{{ download_gdpr_requests }}">{{ text_gdpr_requests }}</a></li>
			<li>&rarr; <a href="{{ download_personal_info }}">{{ text_personal_information }}</a></li>
			<li>&rarr; <a href="{{ download_addresses }}">{{ text_personal_addresses }}</a></li>
			<li>&rarr; <a href="{{ download_orders }}">{{ text_orders }}</a></li>
		</ul>
     	
     	<h1>{{ text_access_to_personal_data }}</h1>
		<p>{{ text_access_to_personal_data_helper }}</p>
		<ul class="list-unstyled">
			<li><a class="btn btn-error" href="{{ personal_data_request }}">{{ text_request_a_report }}</a></li>
		</ul>
    
    	<h1>{{ text_right_to_be_forgotten }}</h1>
		<p>{{ text_right_to_be_forgotten_helper }}</p>
		<ul class="list-unstyled">
			<li><a class="btn btn-primary" href="{{ deletion_request }}">{{ text_request_personal_data_deletion }}</a></li>
		</ul>
     
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 
