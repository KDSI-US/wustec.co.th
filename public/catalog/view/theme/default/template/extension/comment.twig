<h2>{{ text_user_comments }}</h2>
	{% if reviews %}
	{% for review in reviews %}

<div class="row">
	<div class="col-sm-2 col-xs-3">
		<a class="thumbnail">
		  <img src="catalog/view/theme/default/image/default.png" alt="">
		</a>
	</div>
	<div class="col-sm-10 col-xs-9">
		<div class="wcomments">
			<p class="author">{{ review.author }}<span> - {{ review.date_added }}</span></p>
			<p class="comment_text">{{ review.text }}</p>
		</div>
	</div>
</div>

<hr />

{% endfor %}
<div class="text-right">{{ pagination }}</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %}