{% if category_breadcrumbs and breadcrumbs %}
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
  
  {% for index, breadcrumb in breadcrumbs %}
  {
    "@type": "ListItem",
    "position": {{ index+1 }},
    "name": "{{ breadcrumb.name}}",
    "item": "{{ breadcrumb.href }}"
  }   
  {% if loop.last %}
  ]
  {% else %}
  ,
  {% endif %}
  {% endfor %}
}
</script>
{% endif %}
