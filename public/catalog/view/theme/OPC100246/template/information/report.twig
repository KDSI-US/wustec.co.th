{{ header }}{{ git_hidden_tag }}
<style>
	#information-information {
		width: 100%;
	}
	@media only screen and(max-width: 767px) {
		#information-information {
			width: 100%;
		}
	}
</style>
<div id="information-report" class="dreamit-contact-area container-fluid">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
			<li>
				<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
			</li>
		{% endfor %}
	</ul>
	<div class="row">{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-sm-6' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-sm-9' %}
		{% else %}
			{% set class = 'col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">
			{{ content_top }}
			<h1 class="page-title">{{ heading_title }}</h1>

			{{ description }}
			{% if galleria %}
				{{ galleria }}
			{% endif %}
			{{ content_bottom }}</div>
		{{ column_right }}</div>
	<div class="row" style="justify-content: space-evenly">
		<div class="col-lg-8 col-md-10 pl-50 pr-50" style="text-align: center">
			<div class="dreamit-section-title pb-30">
				<div class="dreamit-section-sub-title">
					<h5>// CONTACT</h5>
				</div>
				<div class="dreamit-section-main-title">
					<h2>Make A 
						<span>Report</span>
					</h2>
				</div>
				<div class="dreamit-section-content-text">
					<p>Have any information you would like to share with us?</p>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<div class="contact-form contact_from style-two">
							<form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
								<div class="row">
									<div class="col-lg-6">
										<div class="form_box mb-3 required">
											<input class="form-control" type="text" name="name" id="input-name" placeholder="{{ entry_name }}">
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box mb-3 required">
											<input class="form-control" type="text" name="email" id="input-email" placeholder="{{ entry_email }}">
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box mb-3">
											<input class="form-control" type="text" name="phone" placeholder="Phone Number">
										</div>
									</div>
									<div class="col-lg-6">
										<div class="form_box required">
											<select class="form-control" type="text" name="reason">
												<option value="select">Select A Reason</option>
												<option value="1">B1c.-1 Transparent Business Collaborations</option>
												<option value="2">B1c.-2 Whistleblowing Hotline</option>
												<option value="3">Other</option>
											</select>
											<i class="fa fa-caret-down" aria-hidden="true"></i>
										</div>
									</div>
									<div class="col-lg-12">
										<div class="form_box mb-1 required">
											<textarea class="form-control" id="input-enquiry" name="enquiry" cols="30" rows="5" placeholder="{{ entry_enquiry }}"></textarea>
										</div>
										<div class="wow fadeInUp" data-wow-delay="1.5s" data-wow-duration="1s">
											<div class="quote_btn text_center pt-3">
												<input class="btn btn-primary captcha-btn" type="submit" value="{{ button_submit }}"/>
											</div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{ footer }}
